@page
@model HMS.Pages.Reservation.EditReservationModel
@{
    ViewData["Title"] = "Edit a reservation";
    Layout = null;
}

<html>

<head>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

</head>

<body>

    <div class="container">
        <h2>Edit a reservation</h2>
        <a class="btn-link" style="font-size:20px" asp-page="/Index">Return to control panel</a>

        <form method="post">

            <div class="form-group">
                <label asp-for="ReservationDTO.CheckInDate">Check in date</label>
                <input type="date" class="form-control" asp-for="ReservationDTO.CheckInDate" value="@{

                if(Model.ReservationDTO.CheckInDate != null){
                    DateTime? checkInDate = Model.ReservationDTO.CheckInDate;
                    string formattedCheckInDate = checkInDate.Value.ToString("yyyy-MM-dd");
                    @formattedCheckInDate
                }

                }">
                <span asp-validation-for="ReservationDTO.CheckInDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReservationDTO.CheckOutDate">Check out date</label>
                <input type="date" class="form-control" asp-for="ReservationDTO.CheckOutDate" value="@{
                
                if(Model.ReservationDTO.CheckOutDate != null){
                    DateTime? check_out_date = Model.ReservationDTO.CheckOutDate;
                    string formattedCheckOutDate = check_out_date.Value.ToString("yyyy-MM-dd");
                    @formattedCheckOutDate
                }

                }">
                <span asp-validation-for="ReservationDTO.CheckOutDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomDTO.RoomNumber">Room's number</label>
                <input value="@Model.RoomDTO.RoomNumber" type="text" class="form-control" placeholder="Enter room number" asp-for="RoomDTO.RoomNumber" readonly>
                <span asp-validation-for="RoomDTO.RoomNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomDTO.RoomType">Room's type</label>
                <input value="@Model.RoomDTO.RoomType" type="text" class="form-control" placeholder="Enter room type" asp-for="RoomDTO.RoomType" readonly>
                <span asp-validation-for="RoomDTO.RoomType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomDTO.RoomCapacity">Room's capacity</label>
                <input value="@Model.RoomDTO.RoomCapacity" type="number" class="form-control" placeholder="Enter room capacity" asp-for="RoomDTO.RoomCapacity" readonly>
                <span asp-validation-for="RoomDTO.RoomCapacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomDTO.RoomIsActive">Is room active?</label>
                <input id="checkbox" onclick="CheckValue()" type="checkbox" asp-for="RoomDTO.RoomIsActive" value="@Model.RoomDTO.RoomIsActive" style="cursor:pointer;" readonly>
                <span asp-validation-for="RoomDTO.RoomIsActive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomDTO.RoomDailyCost">Room's daily cost</label>
                <input value="@Model.RoomDTO.RoomDailyCost" placeholder="Enter daily cost" class="form-control" type="text" asp-for="RoomDTO.RoomDailyCost" readonly>
                <span asp-validation-for="RoomDTO.RoomDailyCost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerDTO.CustomerName">Customer's name</label>
                <input value="@Model.CustomerDTO.CustomerName" type="text" class="form-control" placeholder="Enter name" asp-for="CustomerDTO.CustomerName" readonly>
                <span asp-validation-for="CustomerDTO.CustomerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerDTO.CustomerEmail">Customer's email</label>
                <input value="@Model.CustomerDTO.CustomerEmail" type="email" class="form-control" placeholder="Enter email" asp-for="CustomerDTO.CustomerEmail" readonly>
                <span asp-validation-for="CustomerDTO.CustomerEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerDTO.CustomerPhone">Customer's phone number</label>
                <input value="@Model.CustomerDTO.CustomerPhone" type="text" class="form-control" placeholder="Enter phone number" asp-for="CustomerDTO.CustomerPhone" readonly>
                <span asp-validation-for="CustomerDTO.CustomerPhone" class="text-danger"></span>
            </div>

            @if (@Model.ReservationDTO != null &&
                @Model.ReservationDTO.ErrorMessageForDate != null)
            {
                <h3 class="text-danger">
                    <strong>@Model.ReservationDTO.ErrorMessageForDate</strong>
                </h3>
            }

            <button asp-page-handler="EditReservation" type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>

</body>

</html>

